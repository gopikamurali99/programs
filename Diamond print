//in problem has two solution, first one is my soltion, and other is chatgpt suggested improvised code, 

let n = 5

for(let i=1; i<=n;i++){
    process.stdout.write(" ".repeat(n-i));
    
    for(let j=1;j<=i;j++){
        
            process.stdout.write("*" + " ")
              
             }
             
    console.log(" ")
}

for(let i=n-1; i>=1;i--){
    process.stdout.write(" ".repeat(n-i));
    
    for(let j=1;j<=i;j++){
        
            process.stdout.write("*" + " ")
              
             }
              console.log(" ")
}

// second solution


let n = 5

for(let i=1; i<=2*n-1;i++){
    
    let stars = i<=n?i:2*n-i; 
    process.stdout.write(" ".repeat(n-stars));
    
    for(let j=1;j<=stars;j++){
        
            process.stdout.write("*" + " ")
              
             }
             
    console.log(" ")
}

// output

